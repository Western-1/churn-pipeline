AWS_ACCESS_KEY_ID=minio_user
AWS_SECRET_ACCESS_KEY=minio_password
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
AWS_DEFAULT_REGION=us-east-1

# Application Configuration
APP_NAME=Churn Prediction Pipeline
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=churn_prediction
MLFLOW_ARTIFACT_LOCATION=s3://mlflow/

# MinIO / S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=mlflow
MINIO_SECURE=False

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Model Configuration
MODEL_NAME=xgboost_churn_classifier
MODEL_STAGE=Production
MODEL_PATH=models/
RANDOM_STATE=42

# Training Configuration
TRAIN_TEST_SPLIT=0.2
CV_FOLDS=5

# XGBoost Hyperparameters
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1
XGBOOST_N_ESTIMATORS=100
XGBOOST_MIN_CHILD_WEIGHT=1
XGBOOST_SUBSAMPLE=0.8
XGBOOST_COLSAMPLE_BYTREE=0.8

# Data Paths
DATA_RAW_PATH=data/raw/
DATA_PROCESSED_PATH=data/processed/
DATA_REPORTS_PATH=data/reports/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Monitoring
ENABLE_PROMETHEUS=True
PROMETHEUS_PORT=9090
